<div class="container">
  <div class="row">
    <%= link_to "New Dose", new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>
  </div>
  <div class="row">
    <ul class="list-group">
      <% @doses.each do |d| %>
        <li class="list-group-item">
          <%= d.ingredient.name %>, amount:
          <%= d.description %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
