<div class="container">
  <div class="row">
    <%= link_to "Add new dose", new_cocktail_dose_path(@cocktail), class: "btn btn-danger" %>
  </div>
  <div class="row">

    <strong>Name: </strong><%= @cocktail.name %>
    <br>
    <%= cl_image_tag(@cocktail.photo, height: 300, width: 400, crop: :fill) %>
    <br>
    <strong>Ingredients:</strong>
    <% @cocktail.doses.each do |d| %>
      <br>
      <%= d.ingredient.name %>, amount: <%= d.description %>
    <% end %>

  </div>
</div>
